<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaUIChampionProject.Pages.AuthPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Image Source="../Images/logo.png" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="300,0,300,0" MaxWidth="200">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginTextBox" Text="akimov"/>
            <TextBlock Text="Пароль:" Margin="0, 10,0,0"/>
            <TextBox x:Name="PasswordTextBox" PasswordChar="*" Text="123qwe"/>
            <Button x:Name="LoginButton" Content="Войти" Margin="0,30,0,0" HorizontalAlignment="Center" Click="LoginButton_OnClick"/>
        </StackPanel>
    </Grid>
</UserControl>
